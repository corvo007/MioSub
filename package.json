{
  "name": "gemini-subtitle-pro",
  "description": "AI-powered subtitle generation tool",
  "author": "Corvo007",
  "license": "MIT",
  "private": true,
  "version": "2.7.2",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron -r ts-node/register electron/main.ts\"",
    "electron:build": "yarn build:main && vite build && electron-builder",
    "build:debug": "cross-env DEBUG_BUILD=true yarn electron:build",
    "build:main": "vite build -c vite.config.electron.ts"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@google/genai": "^1.30.0",
    "@ricky0123/vad-web": "^0.0.30",
    "electron-squirrel-startup": "^1.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.554.0",
    "onnxruntime-web": "^1.23.2",
    "openai": "^6.9.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-virtuoso": "^4.17.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-static-copy": "^3.1.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.gemini.subtitle.pro",
    "productName": "Gemini Subtitle Pro",
    "directories": {
      "output": "release"
    },
    "icon": "resources/icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*",
      "resources/icon.png"
    ],
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*",
      "dist/*.onnx",
      "dist/*.wasm",
      "dist/*.mjs",
      "dist/*.js"
    ],
    "extraResources": [],
    "portable": {
      "artifactName": "Gemini-Subtitle-Pro-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "extraResources": [
        {
          "from": "resources/whisper-cli",
          "to": "whisper-cli",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "portable"
      ],
      "extraResources": [
        {
          "from": "resources",
          "to": ".",
          "filter": [
            "whisper-cli.exe",
            "yt-dlp.exe",
            "qjs.exe",
            "*.dll",
            "ggml-silero-v6.2.0.bin"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "extraResources": [
        {
          "from": "resources/whisper-cli",
          "to": "whisper-cli",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }
}