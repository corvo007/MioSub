{
  "name": "gemini-subtitle-pro",
  "description": "AI-powered subtitle generation tool",
  "author": "Corvo007",
  "private": true,
  "version": "2.1.1",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"wait-on http://localhost:3000 && electron -r ts-node/register electron/main.ts\"",
    "electron:build": "yarn download:whisper && yarn build:main && vite build && electron-builder",
    "build:main": "vite build -c vite.config.electron.ts",
    "download:whisper": "node scripts/download-whisper.cjs"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@google/genai": "^1.30.0",
    "@ricky0123/vad-web": "^0.0.30",
    "electron-squirrel-startup": "^1.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.554.0",
    "onnxruntime-web": "^1.23.2",
    "openai": "^6.9.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "adm-zip": "^0.5.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-static-copy": "^3.1.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.gemini.subtitle.pro",
    "productName": "Gemini Subtitle Pro",
    "directories": {
      "output": "release"
    },
    "icon": "resources/icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*"
    ],
    "asarUnpack": [
      "node_modules/@ffmpeg-installer/**/*",
      "node_modules/@ffprobe-installer/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/whisper-server.exe",
        "to": "whisper-server.exe",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/whisper-server",
        "to": "whisper-server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "nsis": {
      "artifactName": "Gemini-Subtitle-Pro-Setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false
    },
    "portable": {
      "artifactName": "Gemini-Subtitle-Pro-${version}.${ext}"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  }
}